@{ ViewData["Title"] = "Visualization"; }
<h1>Visualization</h1>
<canvas id="gradesChart" height="120"></canvas>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
fetch('/api/charts/gradesByCourse')
  .then(r => r.json())
  .then(d => new Chart(document.getElementById('gradesChart'), {
    type:'bar',
    data:{ labels:[...d.labels], datasets:[{ label:'Avg Grade', data:[...d.values] }] }
  }));
</script>
