@*
  Views/Shared/_Layout.cshtml
*@
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"] - EduVision</title>

  <!-- Bootstrap core -->
  <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

  <!-- Site styles -->
  <link rel="stylesheet" href="~/assets/css/styles.css" asp-append-version="true" />
</head>

<body>
  <header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
      <div class="container-fluid">
        <a class="navbar-brand" asp-controller="Home" asp-action="Index">EDUVISION</a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
                aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div id="mainNav" class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
          <ul class="navbar-nav flex-grow-1">
            <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="nav-item"><a class="nav-link" asp-controller="Charts" asp-action="Index">Visualization</a></li>
            <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="About">About</a></li>

            <!-- CRUD links -->
            <li class="nav-item"><a class="nav-link" asp-controller="Students" asp-action="Index">Students</a></li>
            <li class="nav-item"><a class="nav-link" asp-controller="Courses" asp-action="Index">Courses</a></li>
            <li class="nav-item"><a class="nav-link" asp-controller="Enrollments" asp-action="Index">Enrollments</a></li>
            <li class="nav-item"><a class="nav-link" asp-controller="Departments" asp-action="Index">Departments</a></li>
            <li class="nav-item"><a class="nav-link" asp-controller="Instructors" asp-action="Index">Instructors</a></li>

            <!-- API reference page -->
            <li class="nav-item"><a class="nav-link" asp-controller="Pages" asp-action="Api">API</a></li>
          </ul>
        </div>
      </div>
    </nav>
  </header>

  <div class="container">
    <main role="main" class="pb-3">
      @RenderBody()
    </main>
  </div>

  <footer class="border-top footer text-muted mt-4">
    <div class="container">
      &copy; @DateTime.UtcNow.Year - EduVision
    </div>
  </footer>

  <!-- Scripts at bottom -->
  <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  <script src="~/assets/js/main.js" asp-append-version="true"></script>
  <script src="~/assets/js/charts.js" asp-append-version="true"></script>

  <!-- ✅ Botpress Floating Chat Bubble (Final Working Version) -->
  <script src="https://cdn.botpress.cloud/webchat/v3.3/inject.js"></script>
  <script>
    window.addEventListener("load", function () {
      setTimeout(function () {
        try {
          window.botpressWebChat.init({
            botId: "1d03a94e-6971-4d3f-bd61-0514cd7dd234",
            clientId: "b25eea09-e897-4538-afa8-6c280ac089f2",
            botName: "EduVision Assistant",
            showOnLoad: false,          // 👈 bubble visible, chat closed
            hideWidget: false,
            themeMode: "light",
            color: "#257caf",
            theme: "prism",
            layoutWidth: "370px",
            layoutHeight: "480px",
            composerPlaceholder: "Ask EduVision..."
          });

          // force bubble visible above footer
          const ensureBubble = () => {
            const bubble = document.querySelector('.bp-widget-button');
            if (bubble) {
              bubble.style.display = 'block';
              bubble.style.position = 'fixed';
              bubble.style.zIndex = '99999';
              bubble.style.bottom = '24px';
              bubble.style.right = '24px';
            } else {
              setTimeout(ensureBubble, 500);
            }
          };
          ensureBubble();
          console.log("✅ Botpress bubble initialized");
        } catch (err) {
          console.error("❌ Botpress init error", err);
        }
      }, 800);
    });
  </script>

  @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
